---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import ContactUs from '~/components/widgets/Contact.astro';
import Features2 from '~/components/widgets/Features2.astro';

const metadata = {
  title: 'Contacto',
};
---

<Layout metadata={metadata}>
  <!-- HeroText Widget -->
  <HeroText tagline="Contacto" title="¡Conéctate con nosotros!" />

  <!-- ContactUs Widget -->
  <ContactUs
    id="form"
    title="Envíanos un mensaje hoy mismo"
    subtitle="Para respuestas rápidas, revisa nuestra sección de Preguntas Frecuentes. ¡Es posible que encuentres la solución que buscas! Si no, nuestro equipo de soporte estará encantado de ayudarte."
    inputs={[
      {
        type: 'text',
        name: 'name',
        label: 'Nombre',
      },
      {
        type: 'email',
        name: 'email',
        label: 'Correo electrónico',
      },
    ]}
    textarea={{
      label: 'Mensaje',
    }}
    disclaimer={{
      label:
        'Al enviar este formulario, aceptas la recolección de tus datos personales.',
    }}
    description="Nuestro equipo de soporte normalmente responde en un plazo de 24 horas hábiles."
  />

  <!-- Features2 Widget -->
  <Features2
    title="¡Estamos aquí para ayudarte!"
    items={[
      {
        title: 'Soporte general',
        description: `Asistencia para preguntas sobre gestión de cuentas, navegación por el sitio, problemas de pago o consultas generales sobre el funcionamiento del sitio web.`,
      },
      {
        title: 'Contacto de ventas',
        description:
          'Preguntas sobre compras, opciones de personalización, licencias de uso comercial o consultas sobre servicios y productos específicos.',
      },
      {
        title: 'Soporte técnico',
        description:
          'Asistencia para problemas de instalación, edición, compatibilidad de software o errores de descarga, relacionados con el uso de nuestros servicios.',
      },
      {
        title: 'Teléfono',
        description: '+57 315 5547856',
        icon: 'tabler:headset',
      },
      {
        title: 'Correo electrónico',
        description: 'contacto@consultoreslyl.com',
        icon: 'tabler:mail',
      },
      {
        title: 'Ubicación',
        description: 'calle 27 #44c-162 Bloque 2 Apartamento 302 Villavicencio',
        icon: 'tabler:map-pin',
      },
    ]}
  />
</Layout>
